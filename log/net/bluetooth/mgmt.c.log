 		BT_DBG("Unknown op %u", opcode);
-		cmd_status(sk, opcode, 0x01);
+		err = cmd_status(sk, opcode, 0x01);
 		break;
 	}
 
+	if (err < 0)
+		goto done;
+
 	err = msglen;
 
 done:

commit 0381101fd6a73c7d6b545044dc1472d019fc64e3
Author: Johan Hedberg <johan.hedberg@nokia.com>
