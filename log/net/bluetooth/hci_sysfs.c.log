 		if (device_create_file(dev, bt_attrs[i]) < 0)
 			BT_ERR("Failed to create device attribute");
 
-	if (sysfs_create_link(&bt_class->subsys.kset.kobj,
+	if (sysfs_create_link(&bt_class->subsys.kobj,
