@@ -715,16 +762,15 @@ static void mousedev_disconnect(struct input_handle *handle)
 			MKDEV(INPUT_MAJOR, MOUSEDEV_MINOR_BASE + mousedev->minor));
 	mousedev->exist = 0;
 
+	mixdev_remove_device(mousedev);
+
