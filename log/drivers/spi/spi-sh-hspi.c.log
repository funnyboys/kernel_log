    // <smpl>
    @@
    @@
    
    (
    * devm_kfree(...);
    |
    * devm_free_irq(...);
    |
    * devm_iounmap(...);
    |
    * devm_release_region(...);
    |
    * devm_release_mem_region(...);
    )
    // </smpl>
    
