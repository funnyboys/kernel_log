 	if ((wacom->wacom_wac.features.quirks & WACOM_QUIRK_BATTERY) &&
 	     !wacom->battery) {
@@ -1743,7 +1743,7 @@ static int wacom_parse_and_register(struct wacom *wacom, bool wireless)
 
